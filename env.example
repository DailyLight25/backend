# Django Environment Variables
# Copy this file to .env and fill in your actual values

# Django Environment (dev, local, or prod)
DJANGO_ENV=dev

# Django Security
SECRET_KEY=your-secret-key-here

# Database Configuration (PostgreSQL)
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
# For Gmail with App Password:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com
SERVER_EMAIL=your-email@gmail.com

# Alternatively, for other SMTP servers:
# SendGrid: smtp.sendgrid.net (port 587)
# Mailgun: smtp.mailgun.org (port 587)
# AWS SES: email-smtp.us-east-1.amazonaws.com (port 587)

# API Keys
GEMINI_API_KEY=your-gemini-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_POST_IMAGE_BUCKET=post-image-storage

# Allowed Hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Debug Mode (for development only)
DEBUG=True

